---
import collegeLogo from "../assets/collegeLogo.png";
const quickLinks = {
  students: [
    { name: "News & Events", url: "/events" },
    { name: "Audit Report", url: "/audit-report" },
    { name: "Courses", url: "/courses" },
    { name: "Research & Publications", url: "/research-and-publications" },
    { name: "Facilities", url: "/facilities-infra" },
    { name: "Placement", url: "/placement" },
    { name: "Student Data", url: "/student-data" },
  ],
  importantLinks: [
    { name: "AKTU", url: "https://aktu.ac.in/", external: true },
    {
      name: "BTE",
      url: "https://bteup.ac.in/webapp/home.aspx",
      external: true,
    },
    { name: "NBA", url: "https://www.nbaind.org/", external: true },
    { name: "PCI", url: "https://www.pci.nic.in/", external: true },
    {
      name: "NIRF-2024",
      url: "https://sdcopmzn.com/NIRF2024.pdf",
      external: true,
    },
    {
      name: "Commitee",
      url: "commitee",
      external: true,
    },
  ],
};

const socialLinks = [
  { name: "Instagram", icon: "instagram", url: "#" },
  { name: "Facebook", icon: "facebook", url: "#" },
  { name: "YouTube", icon: "youtube", url: "#" },
];
---

<footer class="bg-navy-blue text-white w-full mt-auto">
  <div class="container mx-auto py-12">
    <div class="grid grid-cols-1 md:grid-cols-6 gap-6">
      <!-- College Info -->
      <div class="space-y-4 col-span-2">
        <img src={collegeLogo.src} alt="College Logo" class="h-16" />
        <h3 class="text-2xl font-oswald">
          S.D. College of Pharmacy & Vocational Studies
        </h3>
        <p>Bhopa Road, Muzaffarnagar Uttar Pradesh, 251001</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {
            quickLinks.students.map((link) => (
              <li>
                <a href={link.url} class="hoverEffect">
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Important Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Important Links</h4>
        <ul class="space-y-2">
          {
            quickLinks.importantLinks.map((link) => (
              <li>
                <a href={link.url} class="hoverEffect cursor-pointer">
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Contact Us</h4>
        <div class="space-y-2">
          <a href="tel:+911234567890" class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
              ></path>
            </svg>
            +91 123 456 7890
          </a>
          <a
            href="mailto:info@sdpharmacy.edu.in"
            class="flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
              ></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
              ></path>
            </svg>
            info@sdpharmacy.edu.in
          </a>
        </div>
      </div>
    </div>

    <!-- Developer Credit -->
    <a
      href="https://www.linkedin.com/in/varun-singhal-tech/"
      class="text-yellow-400 hover:underline"
      target="_blank"
    >
      <div class="text-sm mt-20 flex items-center justify-center">
        <p class="text-yellow-600">Designed and Developed by</p>
        <img class="w-32" src="signature.webp" />
      </div>
    </a>
  </div>
</footer>

<style>
  .hoverEffect {
    @apply hover:text-yellow-400 transition delay-100 ease-in;
  }
</style>
